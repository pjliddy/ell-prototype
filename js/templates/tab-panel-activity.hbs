<div class="row">
  <div class="col-xs-12">
    <div class="tab-panel-activity">
      {{#each content.sections as |section|}}
        <h4>{{title}}</h4>
        {{!-- intro copy --}}
        {{#if copy}}
          <p>
            {{copy}}
          </p>
        {{/if}}
        {{!-- link --}}
        {{#if link}}
          <a href="{{link.url}}">{{link.label}}: {{link.copy}}</a>
        {{/if}}

        {{!-- tips section --}}
        {{#if tips}}
          <ul class="tips">
            {{#each tips as |tip|}}
              <li>
                TIP: {{tip}}
              </li>
            {{/each}}
          </ul>
        {{/if}}

        {{!-- lesson section --}}
        {{#if lessons}}
          <ol class="lessons">
            {{#each lessons as |lesson|}}
              <li>
                {{{copy}}}

                {{!-- optional link --}}
                {{#if link}}
                  <p><a href="{{link.url}}">{{link.label}}: {{link.copy}}</a></p>
                {{/if}}

                {{!-- optional alerts --}}
                {{!-- TODO: make conditional by type (including bold labels) --}}
                {{#if info}}
                  {{#each info as |alert|}}
                    <p>{{{alert.copy}}}</p>
                  {{/each}}
                {{/if}}
              </li>
            {{/each}}
          </ol>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>
