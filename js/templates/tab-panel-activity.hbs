<div class="row">
  <div class="col-xs-12">
    <div class="tab-panel-activity">
      {{#each content.sections as |section|}}
        <h4><span class="glyphicon icon-{{type}}"></span>{{title}}</h4>
        {{!-- intro copy --}}
        {{#if copy}}
          <p>
            {{copy}}
          </p>
        {{/if}}
        {{!-- link --}}
        {{#if link}}
          <p><a class="link-{{link.type}}" href="{{link.url}}"><span class="span-label">{{link.label}}:</span> {{link.copy}}</a></p>
        {{/if}}

        {{!-- tips section --}}
        {{#if tips}}
          <ul class="list-tips">
            {{#each tips as |tip|}}
              <li>
                <p><span class="span-label">TIP:</span> {{tip}}</p>
              </li>
            {{/each}}
          </ul>
        {{/if}}

        {{!-- lesson section --}}
        {{#if lessons}}
          <ol class="lessons">
            {{#each lessons as |lesson|}}
              <li>
                <p>{{{copy}}}</p>

                {{!-- optional link --}}
                {{#if link}}
                  <p>
                    <a class="link-{{link.type}}" href="{{link.url}}">
                      <strong>{{link.label}}</strong> {{link.copy}}
                    </a>
                  </p>
                {{/if}}

                {{!-- optional alerts --}}
                {{!-- TODO: make conditional by type (including bold labels) --}}
                {{#if alert}}
                  {{#each alert as |alert|}}
                    <p class="text-{{alert.type}}">
                      <strong>
                        {{#isEqual type value="success" }}SUCCESS:{{/isEqual}}
                        {{#isEqual type value="warning" }}WATCH OUT FOR:{{/isEqual}}
                      </strong>

                      {{{alert.copy}}}
                    </p>
                  {{/each}}
                {{/if}}
              </li>
            {{/each}}
          </ol>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>
