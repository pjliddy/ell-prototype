<div class="panel panel-default support">
  <div class="panel-heading">
    <h3 class="panel-title">{{title}}</h3>
  </div>

  <!-- List group -->
  <div class="support-list">
    {{#each items as |item|}}
    <div class="support-list-item">
      <div class="support-list-item-heading">
        <h4>{{title}}: <span>{{subtitle}}</span></h4>
        <a href="{{url}}">{{students}} Students</a>
      </div>
      <div class="support-list-item-body">
        <ul class="bullet-list">
          {{#each bullets as |bullet|}}
            <li>{{bullet}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
    {{/each}}
  </div>
</div>
